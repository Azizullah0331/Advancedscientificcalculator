    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Set current year
            document.getElementById('year').textContent = new Date().getFullYear();
            
            // Calculator functionality
            let currentInput = '0';
            let history = '';
            let resetInput = false;
            
            const currentInputElement = document.getElementById('current-input');
            const historyElement = document.getElementById('history');
            
            function updateDisplay() {
                currentInputElement.textContent = currentInput;
                historyElement.textContent = history;
            }
            
            function addToInput(value) {
                if (resetInput) {
                    currentInput = '0';
                    resetInput = false;
                }
                
                if (currentInput === '0' && value !== '.') {
                    currentInput = value;
                } else {
                    currentInput += value;
                }
                
                updateDisplay();
            }
            
            function addFunction(func) {
                if (resetInput) {
                    currentInput = '0';
                    resetInput = false;
                }
                
                if (currentInput === '0') {
                    currentInput = func + ')';
                } else {
                    currentInput = func + currentInput + ')';
                }
                
                updateDisplay();
            }
            
            function clearAll() {
                currentInput = '0';
                history = '';
                updateDisplay();
            }
            
            function backspace() {
                if (currentInput.length === 1) {
                    currentInput = '0';
                } else {
                    currentInput = currentInput.slice(0, -1);
                }
                updateDisplay();
            }
            
            function calculate() {
                try {
                    history = currentInput + ' =';
                    // Replace visual symbols with JavaScript compatible ones
                    let expression = currentInput
                        .replace(/×/g, '*')
                        .replace(/÷/g, '/')
                        .replace(/\^/g, '**')
                        .replace(/√\(/g, 'Math.sqrt(')
                        .replace(/π/g, 'Math.PI')
                        .replace(/e/g, 'Math.E');
                    
                    // Custom factorial function
                    function factorial(n) {
                        if (n < 0) return NaN;
                        if (n <= 1) return 1;
                        return n * factorial(n - 1);
                    }
                    
                    // Evaluate the expression
                    currentInput = eval(expression).toString();
                    resetInput = true;
                    updateDisplay();
                } catch (error) {
                    currentInput = 'Error';
                    updateDisplay();
                    setTimeout(() => {
                        currentInput = '0';
                        updateDisplay();
                    }, 1500);
                }
            }
            
            // Tab functionality
            function openTab(tabName) {
                const tabContents = document.getElementsByClassName('tab-content');
                for (let i = 0; i < tabContents.length; i++) {
                    tabContents[i].classList.remove('active');
                }
                
                const tabButtons = document.getElementsByClassName('tab-btn');
                for (let i = 0; i < tabButtons.length; i++) {
                    tabButtons[i].classList.remove('active');
                }
                
                document.getElementById(tabName).classList.add('active');
                event.currentTarget.classList.add('active');
            }
            
            // Program loader (simplified)
            function loadProgram(programName) {
                alert(`Loading ${programName} program...\n\nIn a full implementation, this would load specialized calculation functions for ${programName}.`);
                // Here you would typically load different calculation modules
            }
            
            // Initialize display
            updateDisplay();
            
            // Initialize AdSense
            (adsbygoogle = window.adsbygoogle || []).push({});
        });
    </script>
